<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F1EEEE"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/purple_700"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/img_operator"
        android:text="Payment Confirmation"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/img_close"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        app:tint="@color/white"/>

    <LinearLayout
        android:id="@+id/layout2"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/home_dash_back_white"
        android:elevation="10dp"
        android:paddingVertical="15dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginHorizontal="10dp">
           <TextView
               android:layout_weight="1"
               android:textSize="16sp"
               android:text="Number"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               android:textColor="@color/black"/>
           <TextView
               android:layout_weight="1"
               android:id="@+id/tv_number"
               android:textSize="16sp"
               android:text="Number"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               android:gravity="end"
               android:layout_marginEnd="10dp"
               android:textColor="@color/black"/>
       </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_margin="10dp">
           <TextView
               android:layout_weight="1"
               android:layout_marginTop="10dp"
               android:textSize="16sp"
               android:text="Amount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               android:textColor="@color/black"/>
           <TextView
               android:layout_weight="1"
               android:layout_marginTop="10dp"
               android:id="@+id/tv_amount"
               android:textSize="16sp"
               android:text="Amount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               android:gravity="end"
               android:layout_marginEnd="10dp"
               android:textColor="@color/black"/>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_margin="10dp">
           <TextView
               android:layout_weight="1"
               android:layout_marginTop="10dp"
               android:textSize="16sp"
               android:text="Operator"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               android:textColor="@color/black"/>
           <TextView
               android:layout_weight="1"
               android:layout_marginTop="10dp"
               android:id="@+id/tv_operator"
               android:textSize="16sp"
               android:text="Operator"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               android:gravity="end"
               android:layout_marginEnd="10dp"
               android:textColor="@color/black"/>
       </LinearLayout>

       <LinearLayout
           android:id="@+id/layout_commission"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_margin = "10dp">
           <TextView
               android:layout_weight="1"
               android:layout_marginTop="10dp"
               android:textSize="16sp"
               android:text="CashBack"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               android:textColor="@color/black"/>
           <TextView
               android:layout_weight="1"
               android:layout_marginTop="10dp"
               android:id="@+id/tv_commission"
               android:textSize="16sp"
               android:text="Commission"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               android:gravity="end"
               android:layout_marginEnd="10dp"
               android:textColor="@color/black"/>
       </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="@color/gray"/>

       <LinearLayout
           android:id="@+id/layout_totalAmount"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginHorizontal="10dp"
           android:layout_marginTop="15dp"
           android:layout_marginBottom="10dp">
           <TextView
               android:layout_weight="1"
               android:layout_marginTop="10dp"
               android:textSize="16sp"
               android:text="Total Amount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               android:textColor="@color/black"/>
           <TextView
               android:layout_weight="1"
               android:layout_marginTop="10dp"
               android:id="@+id/tv_totalAmount"
               android:textSize="16sp"
               android:text="Total Amount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               android:gravity="end"
               android:layout_marginEnd="10dp"
               android:textColor="@color/black"/>
       </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_confirm_recharge"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Confirm Recharge"
        android:textSize="18sp"
        android:background="@color/purple_500"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/layout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:visibility="gone"/>


<LinearLayout
    android:id="@+id/layout3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@id/layout2"
    android:layout_margin="10dp"
    android:background="@drawable/home_dash_back_white"
    android:elevation="10dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Debit from wallet"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:paddingVertical="10dp"
        android:textStyle="bold"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/home_dash_back_white"
        android:elevation="5dp"
        android:padding="10dp"
        android:weightSum="4"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/wallet"
            app:tint="@color/purple_700"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/tvWallet"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Main Wallet"
            android:gravity="center_vertical"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/textWallet"
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="\u20b9 0.00"
            android:gravity="center"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/checkbox_wallet"
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:checked="true"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvDebitFromGateway"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Debit from Gateway"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:paddingVertical="10dp"
        android:textStyle="bold"
        android:paddingHorizontal="10dp"/>
    <LinearLayout
        android:id="@+id/layout_gateway"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/home_dash_back_white"
        android:elevation="5dp"
        android:padding="10dp"
        android:weightSum="4"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="10dp">
        <ImageView
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/payuback"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/tvGateway"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text=""
            android:gravity="center_vertical"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/textGateway"
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="\u20b9 0.00"
            android:gravity="center"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/checkbox_gateway"
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:checked="false"/>

    </LinearLayout>

</LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirmRecharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout3"
        android:layout_margin="50dp"
        android:text="Confirm Payment"
        android:padding="10dp"
        android:background="@drawable/button_back_green"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>