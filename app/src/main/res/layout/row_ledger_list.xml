<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:paddingEnd="2dp"
        android:background="@drawable/card_back_border"
        android:id="@+id/row_ledger_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/tv_transaction_id"
            android:gravity="center"
            android:text="Trans. ID"
            android:textColor="@color/purple_200"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/tv_transaction_type"
            android:gravity="center"
            android:text="Trans. Type"
            android:textColor="@color/red"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/tv_transaction_date"
            android:gravity="center"
            android:text="Trans. Date"
            android:textColor="@color/green"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/tv_transaction_amount"
            android:gravity="center"
            android:text="Trans Amt."
            android:textColor="@color/black"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/tv_old_balance"
            android:gravity="center"
            android:text="Old Amt."
            android:textColor="@color/purple_700"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/tv_new_balance"
            android:gravity="center"
            android:text="New Amt."
            android:textColor="@color/purple_500"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_marginEnd="2dp"
            android:id="@+id/btn_view_more"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="View More"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/card_back"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>