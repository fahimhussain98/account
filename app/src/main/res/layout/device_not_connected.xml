<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginRight="@dimen/fiftendp"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/fiftendp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="@dimen/_30dp"
        android:gravity="center"
        android:id="@+id/ic_close"
        android:layout_gravity="end"
        android:layout_height="@dimen/_30dp">

        <ImageView
            android:layout_width="@dimen/fiftendp"
            android:src="@drawable/failureicon"
            android:layout_height="@dimen/fiftendp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/card_back_white"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_set"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/twentyfive"
            android:layout_marginRight="@dimen/twentyfive"
            android:layout_height="@dimen/_230dp"/>

        <TextView
            android:id="@+id/tag_line"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/fivedp"
            android:textAlignment="center"
            android:text="Device Not Connected!"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteensp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/device_name"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/fivedp"
            android:textAlignment="center"
            android:layout_marginRight="@dimen/fiftendp"
            android:layout_marginLeft="@dimen/fiftendp"
            android:text="Device Not Connected!"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteensp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/done_btn"
            android:layout_width="match_parent"
            android:text="Done"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/tendp"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/_35dp"
            android:layout_marginLeft="@dimen/_35dp"
            android:background="@drawable/card_back_1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/skip_btn"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:text="SKIP"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/fiftendp"
            android:layout_marginTop="@dimen/tendp"
            android:textSize="@dimen/fourteensp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


<!--    android:background="@drawable/white_round"-->
</LinearLayout>