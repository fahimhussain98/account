<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activities.SplashScreenActivity">

    <ImageView
        android:id="@+id/ivLogoSplash"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/account_pay_private_limited"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="Powered By"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:textSize="22sp"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:src="@drawable/bbps"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="10dp">
            <ImageView
                android:layout_weight="1.1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/pci_image"
                android:padding="10dp"/>
            <ImageView
                android:layout_weight="1.1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/secure_image"/>
          <LinearLayout
              android:layout_weight="0.8"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:orientation="horizontal"
              android:gravity="center"
              android:padding="10dp">
              <ImageView
                  android:layout_width="80dp"
                  android:layout_height="match_parent"
                  android:src="@drawable/iso_image"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="80dp"
                  android:text="900:2015"
                  android:gravity="center_vertical"
                  android:textStyle="bold"
                  android:textColor="@color/purple_700"
                  android:textSize="16sp"/>
          </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>